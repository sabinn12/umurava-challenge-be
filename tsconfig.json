{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Base directory for resolving aliases
    "paths": {
      "@/*": ["src/*"] // Define the alias @/ to point to the src/ directory
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}